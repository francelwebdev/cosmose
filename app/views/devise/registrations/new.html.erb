<div class="navbar sticky-top registration-navbar">
  <%= link_to root_path do %>
    <img src="https://i.ibb.co/6y67sbM/cosmoseblack.png" alt="logo" class="navbar-logo">
  <% end %>
  <div class="navbar-buttons">
    <%= link_to "Connexion", new_user_session_path, class:"login-btn btn btn-secondary delink-btn" %>
    <%= link_to "Inscription", new_user_registration_path, class:"signup-btn btn btn-primary delink-btn" %>
  </div>
</div>
<% should_display_all = resource.errors.any? %>
<div class="container pt-5 pb-2 registration-new">
  <h1>Inscription</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="registration-new-first-part">
      <%= f.input :email,
      required: true,
      autofocus: true,
      placeholder: "cosmose@artiste.art",
      input_html: { autocomplete: "email", class: "required-inputs-registration" } %>
      <%= f.input :password,
      required: true,
      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      input_html: { autocomplete: "new password",class: "required-inputs-registration" }
      %>
      <%= f.input :password_confirmation,
      required: true,
      input_html: { autocomplete: "new password", class: "required-inputs-registration" }
      %>
      <%= f.input :username,
      required: true,
      placeholder: "CharlotteD",
      input_html: { autocomplete: "username", class: "required-inputs-registration" }
      %>
      <%= f.input :first_name,
      required: true,
      placeholder: "Charlotte",
      input_html: { autocomplete: "first name", class: "required-inputs-registration" }
      %>
      <%= f.input :last_name,
      required: true,
      placeholder: "Dubois",
      input_html: { autocomplete: "last name", class: "required-inputs-registration" }
      %>
      <h2 class="next-step-button-registration btn btn-primary <%= should_display_all ? 'd-none' : '' %> ">Suivant</h2>
    </div>
    <div class="registration-new-second-part <%= should_display_all ? '' : 'd-none' %>">
      <%= f.input :address, required: true, placeholder: "Marseille"%>
      <%= f.input :bio%>
      <%= f.input :website, placeholder: "cosmose.art"%>
      <%= f.input :competences, required: true, collection: User::SKILLS_LIST, input_html: { multiple: true, class: "select2"} %>
      <%= f.input :photo, as: :file %>
      <div class="form-actions center-btn-forms">
        <%= f.button :submit, "CrÃ©er votre compte", class:"btn btn-primary mb-4" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
