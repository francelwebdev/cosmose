
<% if current_user == message.user %>
<div class="message message-container current_user" id="message-<%= message.id %>">
  <p class="message-content">
    <%= message.content %>
  </p>
  <% if current_user.photo.attached? %>
  <div class="message-author current_user">Moi <%=cl_image_tag(current_user.photo.key, class: "avatar-xs" , alt: "avatar")%></div>
  <% else %>
  <div class="message-author current_user">Moi <%= image_tag 'https://www.inbenta.com/wp-content/themes/inbenta/img/icons/avatar.svg?ver=2', class: 'avatar-xs' %></div>
  <% end %>
</div>
<% else %>
<div class="message message-container" id="message-<%= message.id %>">
  <p class="message-content">
    <%= message.content %>
  </p>
  <%= link_to user_path(message.user) do %>
   <% if message.user.photo.attached? %>
  <div class="message-author"><%=cl_image_tag(message.user.photo.key, class: "avatar-xs" , alt: "avatar")%></div>
  <% else %>
  <div class="message-author"><%= image_tag 'https://www.inbenta.com/wp-content/themes/inbenta/img/icons/avatar.svg?ver=2', class: 'avatar-xs' %></div>
  <% end %>
  <% end %>
</div>
<% end %>
