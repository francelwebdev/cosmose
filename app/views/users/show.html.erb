<div class="container-profile-page d-flex">
  <div class="profile-page-left d-flex flex-column align-items-center justify-content-around">
    <% if @user.photo.attached? %>
        <%= cl_image_tag(@user.photo.key, class: "avatar-large", alt: "avatar") %>
      <% else%>
        <%= image_tag 'https://via.placeholder.com/250', class: "avatar-large"  %>
      <% end %>
    <h4 class="profile-page-username"><%= @user.username %></h4>
    <p><%= @user.address %></p>
    <p><%= @user.bio %></p>
    <ul>
      <% @user.competences.each do |competence| %>
      <li><%= competence %></li>
      <% end %>
    </ul>
    <button class="btn btn-primary">MESSAGE</button>
  </div>
  <div class="profile-page-right d-flex flex-column align-items-center">
    <div class="buttons-profile d-flex justify-content-around">
      <button class="btn-profile-portfolio btn-profile-active">
      PORTFOLIO
      <div class="btn-profile-portfolio__horizontal"></div>
      <div class="btn-profile-portfolio__vertical"></div>
      </button>
      <button class="btn-profile-projects btn-profile-inactive">
      PROJETS
      <div class="btn-profile-projects__horizontal"></div>
      <div class="btn-profile-projects__vertical"></div>
      </button>
    </div>
    <div class="content-profile">
      <div class="user-portfolio d-flex">
        <div class="image1"></div>
        <div class="box-images-profile">
          <div class="image2"></div>
          <div class="image3"></div>
        </div>
      </div>
    </div>
    <div class="user-projects hidden">
      <div class="content-profile-projects">
        <div class="cards-projects-profile">
          <% @user.projects.each do |project| %>
          <%= link_to project_path(project) do %>
          <div class="card">
            <div class="card-images d-flex flex-column justify-content-between">
              <div class="card-images-element-top">
                <i class="far fa-heart"></i>
              </div>
              <div class="card-images-elements-bottom d-flex justify-content-between">
                <i class="fas fa-record-vinyl"></i>
                <div class="avatar-card"></div>
              </div>
            </div>
            <div class="card-content">
              <h4 class="card-title"><%= project.title %></h4>
              <p><%= project.description %></p>
              <p class="card-localisation"><%= project.address %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

