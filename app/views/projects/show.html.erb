<div class="list-group">
  <div class="list-group-item"><%= @project.title %></div>
  <div class="list-group-item"><%= @project.description %></div>
  <div class="list-group-item"><%= @project.categories %></div>
  <div class="list-group-item"><%= @project.finished %></div>
  <div class="list-group-item"><%= @project.open_to_collab %></div>
  <div class="list-group-item"><%= @project.address %></div>
  <div class="list-group-item"><% pre_like = @project.user_likes.find { |like| like.user == current_user} %>
    <% if pre_like %>
    <%= link_to "<i class='fas fa-heart' style='color:red'></i>".html_safe, project_user_like_path(@project, pre_like), method: :delete, remote: true %>
    <% else %>
    <%= link_to "<i class='far fa-heart' style ='color:red'></i>".html_safe, project_user_likes_path(@project), method: :post, remote: true %>
    <% end %>
    <%= @project.user_likes.count %> <%= (@project.user_likes.count) == 1 ? 'Like' : 'Likes'%>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h3>Ajouter un bloc</h3>
      <%= simple_form_for([@project, @block]) do |f| %>
      <%= f.input :content, required: true %>
      <%= f.input :photo, as: :file %>
      <%= f.input :private %>
      <%= f.button :submit, class:"btn btn-primary", remote: true %>
      <% end %>
    </div>

    <div class="col-sm-4">
      <h3>Blocks privés du projet</h3>
      <% @private_blocks.each do |block| %>
      <%= block.content %>
      <br/>
      <% if block.photo.attached? %>
        <%= image_tag(block.photo, width: "150px") %>
      <% end %>
      <hr />
      <% end %>
    </div>

    <div class="col-sm-4">
      <h3>Blocks publics du projet</h3>
      <% @public_blocks.each do |block| %>
      <%= block.content %> & 
      Privé : <%= block.private %>
      <br />
      <% if block.photo.attached? %>
        <%= image_tag(block.photo) %>
      <% end %>
      <hr />  
      <% end %>
    </div>
  </div>
</div>