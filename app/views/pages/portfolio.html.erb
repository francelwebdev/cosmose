<div class="container-profile-page d-flex">
  <div class="profile-page-left d-flex flex-column align-items-center col-3">
  <% if current_user.photo.attached? %>
        <%= cl_image_tag(current_user.photo.key, class: "avatar-large img-fluid" , alt: "avatar") %>
      <% else %>
        <%= image_tag 'https://via.placeholder.com/250', class: "img-fluid" %>
      <% end %>
      <div class="users-infos d-flex flex-column align-items-center mt-2">
    <h4 class="profile-page-username mt-2"><i class="fas fa-user-circle"></i> <%= current_user.username.capitalize %></h4>
    <p class="mr-3 ml-5"><i class="fas fa-map-marker-alt"></i> 
    <% if current_user.latitude %>
    <%= Geocoder.search([current_user.latitude, current_user.longitude]).first.county %>
    <% else %>
    <%= current_user.address.first(20) %>...
    <% end %>
    </p>
    <p class="mr-3 ml-5"><%= current_user.bio %></p>
    </div>
    <div class="user-skills text-center">
      <% current_user.competences.each do |competence| %>
      <span class="skill"><%= competence %></span>
      <% end %>
    </div>
    <%= link_to "Ã‰diter le profil", edit_user_registration_path(current_user), class:"btn btn-secondary mt-3" %>
  </div>
  <div class="profile-page-right d-flex flex-column align-items-center col-9">
    <div class="buttons-profile d-flex">
      <a class="btn-profile-portfolio btn-profile-active">
        PORTFOLIO
      </a>
      <a class="btn-profile-projects btn-profile-inactive">
        PROJETS
      </a>
    </div>
    <div class="content-profile">
      <div class="user-portfolio d-flex">
        <div class="row">
          <div class="blocks">
            <% @blocks.each do |block| %>
            <%= render 'shared/block_display', block: block %>
            <hr />
            <% end %>
          </div>
          <% if current_user %>
          <%= render 'shared/artist_block_form', block: @block %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="user-projects hidden">
      <div class="content-profile-projects">
        <div class="cards-projects-profile">
          <% current_user.projects.each do |project| %>
          <%= link_to project_path(project) do %>
          <div class="card">
            <div class="card-images d-flex flex-column justify-content-between">
              <div class="card-images-element-top">
              </div>
              <div class="card-images-elements-bottom d-flex justify-content-between">
                <i class="fas fa-record-vinyl"></i>
                <% if project.user.photo.attached? %>
                  <%= cl_image_tag(project.user.photo.key, class: "avatar", alt: "avatar") %>
                <% else %>
                  <%= image_tag 'https://via.placeholder.com/50', class: "avatar"  %>
                <% end %>
              </div>
            </div>
            <div class="card-content">
              <h4 class="card-title"><%= project.title %></h4>
              <p><%= project.description %></p>
              <p class="card-localisation"><%= project.address %></p>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
